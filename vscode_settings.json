{
	//
	// Visuals
	//

	// Fonts
	"editor.fontSize": 16,
	"editor.fontWeight": "500",
	"editor.fontFamily": "FiraCode-Retina",
	"editor.lineHeight": 24,
	"editor.fontLigatures": true,
	"editor.renderWhitespace": "boundary",

	// Theme
	"workbench.colorTheme": "arcade", // light: Quiet Light
	"workbench.iconTheme": "file-icons",
	"workbench.preferredLightColorTheme": "Noctis Lilac",
	"workbench.preferredDarkColorTheme": "Noctis Azureus",
	"window.autoDetectColorScheme": true,

	//
	// Elements
	//
	"breadcrumbs.enabled": true,
	"breadcrumbs.filePath": "on",
	"breadcrumbs.symbolPath": "off",
	"editor.minimap.enabled": false,
	"workbench.editor.showTabs": false,
	"workbench.startupEditor": "newUntitledFile",
	"workbench.activityBar.visible": false,
	"workbench.tips.enabled": false,
	"explorer.openEditors.visible": 0,

	//
	// Editor stuff
	//
	"extensions.ignoreRecommendations": false,
	"editor.accessibilitySupport": "off",
	"editor.formatOnSave": false,
	"editor.formatOnPaste": false,
	"editor.insertSpaces": false,
	"editor.scrollBeyondLastLine": false,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.snippetSuggestions": "top",
	"diffEditor.ignoreTrimWhitespace": true,
	"workbench.settings.editor": "json",
	"git.confirmSync": false,
	"zenMode.fullScreen": false,
	"security.workspace.trust.enabled": false,

	// Max panes
	"workbench.editor.limit.enabled": true,
	// JS/TS Highlights
	"editor.semanticHighlighting.enabled": true,

	//
	// Front-End
	//
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",

	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
	},
	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
	},
	"[typescriptreact]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
	},
	// Prettier
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "all",
	"prettier.semi": false,
	// Linting
	"eslint.enable": false, // don't like the errors
	
	// Emmet
	"emmet.triggerExpansionOnTab": true,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
	},
	// CSS
	"css.lint.unknownAtRules": "ignore",

	//
	// Go
	//
	"go.autocompleteUnimportedPackages": true,
	"go.useCodeSnippetsOnFunctionSuggest": true,
	"go.lintTool": "golangci-lint",
	"go.lintFlags": [
		"--fast",
	],
	"go.useLanguageServer": true,
	"go.toolsGopath": "/Users/rista/Projects/go",
	"go.languageServerExperimentalFeatures": {
		"format": true,
		"autoComplete": true,
	},
	"files.associations": {
		"*.tmpl": "html",
	},

	//
	// Files
	//
	"explorer.confirmDelete": false,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/node_modules": true,
		"**/.meteor": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
	},
	"workbench.statusBar.visible": false,
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},


	// Touchbar
	"nasc-touchbar.goToDefinition": false, // Go to the function or variable definition
	"nasc-touchbar.addCursorBelow": false, // Add a cursor in the line below
	"nasc-touchbar.toggleSidebar": false, // Toggles the sidebar
	"nasc-touchbar.togglePanel": false, // Toggles the panel in the bottom of the editor
	"nasc-touchbar.showCommands": false, // Shows the run command prompt
	"nasc-touchbar.rename": true, // Rename (replace all) variable or function names
	"nasc-touchbar.showReferences": true,
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[mjml]": {
		"editor.defaultFormatter": "mjmlio.vscode-mjml"
	},
	"workbench.productIconTheme": "fluent-icons",
	"go.toolsManagement.autoUpdate": true,
}