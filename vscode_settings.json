{
	//
	// Visuals
	//

	// Fonts
	"editor.fontSize": 16,
	"editor.fontWeight": "500",
	"editor.fontFamily": "IBMPlexMono-Medium",
	"editor.lineHeight": 24,
	"editor.fontLigatures": true,
	"editor.renderWhitespace": "boundary",

	// Theme
	"workbench.colorTheme": "LaserWave", // light: Quiet Light
	"workbench.iconTheme": "file-icons",

	//
	// Elements
	//
	"breadcrumbs.enabled": true,
	"breadcrumbs.filePath": "on",
	"breadcrumbs.symbolPath": "off",
	"editor.minimap.enabled": false,
	"workbench.editor.showTabs": false,
	"workbench.startupEditor": "newUntitledFile",
	"workbench.activityBar.visible": false,
	"workbench.tips.enabled": false,
	"explorer.openEditors.visible": 0,

	//
	// Editor stuff
	//
	"extensions.ignoreRecommendations": false,
	"window.zoomLevel": 0,
	"editor.accessibilitySupport": "off",
	"editor.formatOnSave": false,
	"editor.formatOnPaste": false,
	"editor.insertSpaces": false,
	"editor.scrollBeyondLastLine": false,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.snippetSuggestions": "top",
	"diffEditor.ignoreTrimWhitespace": true,
	"workbench.settings.editor": "json",
	"git.confirmSync": false,
	"zenMode.fullScreen": false,

	// Max panes
	"workbench.editor.limit.enabled": true,
	// New search
	"search.enableSearchEditorPreview": true,
	// JS/TS Highlights
	"editor.semanticHighlighting.enabled": true,

	// Liveshare
	"liveshare.featureSet": "insiders",

	//
	// Front-End
	//
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",

	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
	},
	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
	},
	"[typescriptreact]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
	},
	"typescript.experimental.useSeparateSyntaxServer": true,
	// Prettier
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "all",
	"prettier.semi": false,
	// Linting
	"eslint.enable": false, // don't like the errors
	
	// Emmet
	"emmet.triggerExpansionOnTab": true,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
	},
	// CSS
	"css.lint.unknownAtRules": "ignore",

	//
	// Go
	//
	"go.autocompleteUnimportedPackages": true,
	"go.useCodeSnippetsOnFunctionSuggest": true,
	"go.lintTool": "golangci-lint",
	"go.lintFlags": [
		"--fast",
	],
	"go.useLanguageServer": true,
	"go.alternateTools": {
		"go-langserver": "gopls",
	},
	"go.languageServerExperimentalFeatures": {
		"format": true,
		"autoComplete": true,
	},
	"files.associations": {
		"*.tmpl": "html",
	},

	//
	// Files
	//
	"explorer.confirmDelete": false,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/node_modules": true,
		"**/.meteor": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
	},
	"workbench.statusBar.visible": false,
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
}